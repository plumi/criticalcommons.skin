<div id="portal-searchbox"
     i18n:domain="plone"
     tal:define="navigation_root_url view/navigation_root_url;
                 search_input_id view/search_input_id;">

    <form name="searchform" id="searchGadget_form"
          action="@@search"
          tal:attributes="action string:${navigation_root_url}/@@search;
                          id string:${search_input_id}_form;">

        <div class="LSBox">
        <label
               tal:attributes="for search_input_id"
               >Search for</label>

        <input name="SearchableText"
               type="text"
               size="18"
               value=""
               title="Search Site"
               accesskey="4"
               i18n:attributes="title title_search_site;"
               tal:attributes="value request/form/SearchableText|nothing;
                               id search_input_id"
               class="searchField" />
        <label for="portal_type">in</label>
        <select name="portal_type">
            <option name="clips" value="PlumiVideo">Clips</option>
            <option name="lectures" value="Lecture">Lectures</option>
            <option name="articles" value="News Item">Articles</option>
            <option name="commentaries" value="Commentary">Commentaries</option>
               class="txt-input" />
        <label for="in_select_box">in</label>
        <select name="in_select_box">
            <option name="clips">Clips</option>
        </select>

        <input class="btn-go" type="image" src="++resource++criticalcommons.skin.images/btn-go.gif" />

        <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
        </div>
    </form>

    <div id="portal-advanced-search"
         class="hiddenStructure">
        <a href="#"
           tal:attributes="href string:${navigation_root_url}/@@search"
           i18n:translate="label_advanced_search"
           accesskey="5">
            Advanced Search&hellip;
        </a>
    </div>

</div>

